<%= render './layouts/search_bar' %>
<div class="container"> 

	<div class="row ">
		<div class="col-lg-12">
			<%if @opportunity_search.empty? %>
				<div class = "panel">
					<div class="row panel-body detailopp">
						<h3> <%="Sua pesquisa nÃ£o encontrou resultados"%> </h3>
					</div>
				</div>
			<%end%>
		<% @opportunity_search.each do |opportunity| %>
				<div class="panel">
					<div class="row panel-body detailopp">
						<div class="row">
							<div class="col-lg-12 opportunity-title">
								<h3><%=opportunity.title%></h3>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 oppt-ngo">
								<span>Por <%= opportunity.ngo.name %></span>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 description">
								<%= opportunity.description %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-4">
								<span><%= opportunity.address.city %>, 
								<%= opportunity.address.state %> </span>
							</div>
							<div class="col-lg-4">
								<%= opportunity.cause.name %>
							</div>
							<div class="col-lg-4">
								<div class="alignright btn btn-primary outline col-lg-3">
		 							<%= link_to "Ver mais", opportunity, :class=>"link-style" %>
		 						</div>
							</div>
						</div>
		 			</div>
		 		</div>
			<%end%>
		</div>
	</div>
	<div class="alignright">
	<%= paginate @opportunity_search, :theme => 'twitter-bootstrap-3' %>
	</div>
</div>